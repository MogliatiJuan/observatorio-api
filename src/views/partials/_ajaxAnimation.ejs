<!-- //Waiting ajax -->
<img src="/img/loading.gif" id="loading-indicator" style="display:none" />
<h1 id="cargando" style="display:none">Esperando al Servidor</h1>

<style>
    #loading-indicator {
        position: absolute;
        z-index: 100;
        /* display: block; */
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    #cargando {
        left: 0;
        line-height: 200px;
        margin-top: -100px;
        position: absolute;
        text-align: center;
        top: 50%;
        width: 100%;
        color: white;
        z-index: 101;
    }
</style>

<script>
    $(document).ajaxSend(function (event, request, settings) {
        $('.navbar').hide();
        $('#cuerpo').hide();
        $('.footer-section').hide();
        $('#loading-indicator').show();
        $('#cargando').show();
    });

    $(document).ajaxStop(function (event, request, settings) {
        $('#loading-indicator').hide();
        $('#cargando').hide();
        $('.navbar').show();
        $('#cuerpo').show();
        $('.footer-section').show();
    });
</script>